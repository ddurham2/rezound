## the bootstrap script can be used to rebuild configure and Makefile.in
## should anything be changed, It's really of no use to The common used 
## who wants to do a one-time build. 
##
## passing the --strip option will remove all auto-generated files from the
## directory tree



DIRS="./ ./config ./src ./src/PoolFile ./src/backend ./src/backend/Edits ./src/backend/Effects ./src/backend/Remaster ./src/misc ./src/misc/cc++ ./src/frontend_fox"
FILES="libtool Makefile Makefile.in aclocal.m4 config.cache config.h config.h.in config.status configure config.log install-sh missing mkinstalldirs stamp-h stamp-h.in"

for dir in $DIRS; do
	for file in $FILES; do
		if test -f "$dir/$file"; then
			rm -vf "$dir/$file"
		fi
	done
done

if test "$1" = "--clean"; then
	exit
fi

aclocal -I config/m4
autoheader -l config
automake --add-missing --foreign
autoconf
